<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#D8E2E3"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/textView01"
        android:text="0"
        android:textSize="38sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline"
        android:gravity="center"
        android:background="#BCDBDE"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/textView02"
        android:text="0"
        android:textSize="38sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="#BCDBDE"
        android:padding="5dp"
        />

    <SeekBar
        android:id="@+id/seekBar01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:min="0"
        android:max="100"
        android:progress="0"
        />

    <RadioGroup
        android:id="@+id/rg_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekBar01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline"
        android:layout_marginTop="30dp"
        android:background="#BCDBDE"
        android:padding="5dp"
        >
        <RadioButton
        android:id="@+id/rb_in_pln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLN"
        android:textSize="35sp"
        />
        <RadioButton
            android:id="@+id/rb_in_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EURO"
            android:textSize="35sp"
            />
        <RadioButton
            android:id="@+id/rb_in_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textSize="35sp"
            />
    </RadioGroup>


    <RadioGroup
        android:id="@+id/rg_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekBar01"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="#BCDBDE"
        android:padding="5dp"
        >
        <RadioButton
            android:id="@+id/rb_out_pln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLN"
            android:textSize="35sp"
            />
        <RadioButton
            android:id="@+id/rb_out_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EURO"
            android:textSize="35sp"
            />
        <RadioButton
            android:id="@+id/rb_out_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textSize="35sp"
            />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>